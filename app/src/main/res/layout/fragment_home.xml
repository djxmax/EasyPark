<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_button_free_place"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        card_view:cardBackgroundColor="@color/free_place"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_white_48dp"
            android:layout_above="@+id/home_button_free_place_txt"
            android:layout_alignParentTop="true"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/home_button_free_place_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_free_place"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/home_text"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_button_my_place"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:elevation="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/my_place"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_white_48dp"
                android:layout_above="@+id/home_button_my_place_txt"
                android:layout_alignParentTop="true"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/home_button_my_place_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_my_place"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                style="@style/home_text"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardBackgroundColor="@color/police_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_button_police"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="5dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/police"
                android:foreground="?android:attr/selectableItemBackground">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_notifications_on_white_48dp"
                        android:layout_above="@+id/home_button_police_txt"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/home_button_police_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_police"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        style="@style/home_text"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_button_police_seen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:elevation="5dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/police_seen"
                android:foreground="?android:attr/selectableItemBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_my_location_white_48dp"
                        android:layout_above="@+id/home_button_police_seen_txt"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/home_button_police_seen_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_police_seen"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        style="@style/home_text"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>