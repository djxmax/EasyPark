<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/home_button_free_place"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/home_button_free_place_selector"
        android:clickable="true"></LinearLayout>
    <LinearLayout
        android:id="@+id/home_button_my_place"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/home_button_my_place_selector"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:clickable="true"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/police_bg"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/home_button_police"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/home_button_police_selector"
            android:clickable="true"></LinearLayout>
        <LinearLayout
            android:id="@+id/home_button_police_seen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_button_police_seen_selector"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:clickable="true"></LinearLayout>
    </LinearLayout>

</LinearLayout>